{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier", "node", "security"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:node/recommended",
    "plugin:security/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": "error",
    "node/no-unsupported-features/es-syntax": [
      "error",
      { "version": ">=14.0.0", "ignores": [] }
    ],
    "node/no-missing-import": "off", // Handled by TypeScript
    "node/no-unpublished-import": "off", // Handled by TypeScript
    "node/no-process-exit": "off", // Allowed for graceful shutdown on critical errors
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_" }
    ],
    "@typescript-eslint/explicit-module-boundary-types": "off", // Often too strict for handlers/middleware
    "@typescript-eslint/no-explicit-any": "warn",
    "security/detect-unsafe-regex": "warn",
    "security/detect-non-literal-regexp": "warn",
    "security/detect-child-process": "warn",
    "security/detect-eval-with-expression": "error",
    "security/detect-json-parse": "warn",
    "security/detect-buffer-noassert": "warn",
    "security/detect-possible-timing-attacks": "warn",
    "security/detect-pseudoRandomBytes": "warn",
    "security/detect-unsafe-command-line-arguments": "warn",
    "security/detect-unsafe-regex": "warn",
    "node/no-callback-literal": "error",
    "no-console": ["warn", { "allow": ["warn", "error"] }], // Use logger instead
    "prefer-const": ["error"],
    "eqeqeq": ["error", "always"], // Enforce ===
    "curly": ["error", "all"],
    "@typescript-eslint/naming-convention": [
      "error",
      { "selector": "class", "format": ["PascalCase"] },
      { "selector": "function", "format": ["camelCase"] },
      { "selector": "variable", "format": ["camelCase", "UPPER_CASE"] },
      { "selector": "interface", "format": ["PascalCase"], "prefix": ["I"] }, // Optional: I for interfaces
      { "selector": "typeAlias", "format": ["PascalCase"], "prefix": ["T"] } // Optional: T for types
    ]
  },
  "settings": {
    "node": {
      "tryExtensions": [".js", ".json", ".node", ".ts", ".d.ts"]
    }
  },
  "overrides": [
    {
      // Test files are more lenient
      "files": ["tests/**/*.ts"],
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "node/no-unpublished-import": "off",
        "node/no-missing-import": "off"
      }
    }
  ]
}
